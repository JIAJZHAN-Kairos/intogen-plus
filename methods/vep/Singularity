Bootstrap: docker
From: continuumio/miniconda:4.5.12

%environment
    export LC_ALL=C.UTF-8

%runscript
    exec "/opt/conda/bin/vep" "$@"

%post

    # Load environment
    export LC_ALL=C.UTF-8

    # Install Variant Effect Predictor
    /opt/conda/bin/conda install -y -c conda-forge -c bioconda ensembl-vep=88.10
